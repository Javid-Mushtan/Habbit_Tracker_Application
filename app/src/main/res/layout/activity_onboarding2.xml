<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="32dp"
    tools:context=".Onboarding2">

    <TextView
        android:id="@+id/tvSkip2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:textColor="@color/primary_blue"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:padding="16dp"
        android:clickable="true"
        android:focusable="true" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/onboarding2_illustration"
        android:scaleType="fitCenter"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:contentDescription="Track your progress illustration" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Track Your Progress\nEasily"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/primary_blue"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="48dp"
        android:lineSpacingExtra="8sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Monitor your habits and see your growth over time with detailed statistics and visual progress tracking."
        android:textSize="16sp"
        android:textColor="@color/secondary_text"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:lineSpacingExtra="4sp"
        android:paddingHorizontal="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="48dp">

        <LinearLayout
            android:id="@+id/dotsLayout2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/dot_inactive"
                android:layout_marginHorizontal="4dp" />

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/dot_active"
                android:layout_marginHorizontal="4dp" />

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/dot_inactive"
                android:layout_marginHorizontal="4dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnPrevious2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Previous"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_outline_background"
                android:textColor="@color/primary_blue"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_marginEnd="12dp" />

            <Button
                android:id="@+id/btnNext2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_background"
                android:textColor="@color/white"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>