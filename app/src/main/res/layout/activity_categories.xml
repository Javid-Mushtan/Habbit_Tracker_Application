<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:background="@android:color/white"
    tools:context=".CategoriesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Categories"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="24dp" />

        <!-- Custom Categories Section -->
        <TextView
            android:id="@+id/tvCustomCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Custom categories"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvCustomCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4 available"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="16dp" />

        <!-- Custom Categories RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCustomCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp" />

        <!-- Default Categories Section -->
        <TextView
            android:id="@+id/tvDefaultCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Default categories"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvPremiumInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editable for premium users"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="16dp" />

        <!-- Default Categories RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDefaultCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- New Category Button -->
        <Button
            android:id="@+id/btnNewCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="NEW CATEGORY"
            android:background="@android:color/transparent"
            android:textColor="#6200EE"
            android:textAllCaps="true"
            style="?android:attr/borderlessButtonStyle" />

    </LinearLayout>
</ScrollView>