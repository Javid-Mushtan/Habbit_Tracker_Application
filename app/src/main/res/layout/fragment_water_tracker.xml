<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:background="@color/white"
    tools:context=".fragments.WaterTrackerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Water Tracker"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            android:textColor="@color/black" />

        <androidx.cardview.widget.CardView
            android:id="@+id/goalCompletedView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/green_light"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ‰ Goal Completed!"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/green_dark"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="You've reached your daily water goal!"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:gravity="center" />

                <Button
                    android:id="@+id/btnResetToday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reset Today"
                    android:layout_marginTop="12dp"
                    android:background="@color/white"
                    android:textColor="@color/green_dark"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/remindersStatusView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/blue_light"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvRemindersStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ”” Hourly reminders active"
                    android:textSize="14sp"
                    android:textColor="@color/blue_dark"
                    android:gravity="center_vertical" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_notifications"
                    app:tint="@color/blue_dark" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reminders"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Get hourly reminders until you complete your daily water goal"
                    android:textSize="14sp"
                    android:textColor="@color/gray"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btnToggleReminders"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enable Reminders"
                    android:textSize="14sp"
                    android:background="@color/primary_color"
                    android:textColor="@color/white" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Daily Water Goal"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/etDailyGoal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Enter goal in ml"
                        android:inputType="number"
                        android:textSize="16sp"
                        android:background="@drawable/edit_text_background"
                        android:padding="12dp" />

                    <Button
                        android:id="@+id/btnSetGoal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SET"
                        android:textSize="14sp"
                        android:layout_marginStart="12dp"
                        android:background="@color/primary_color"
                        android:textColor="@color/white"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvCurrentGoal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Current goal: 2000 ml"
                    android:textSize="14sp"
                    android:textColor="@color/gray"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginBottom="16dp">

                    <View
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@drawable/circle_background"
                        android:layout_centerInParent="true" />

                    <View
                        android:id="@+id/progressCircle"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@drawable/circle_progress"
                        android:layout_centerInParent="true" />

                    <TextView
                        android:id="@+id/tvProgress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/2000 ml"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_centerInParent="true" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tvRemaining"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Remaining: 2000 ml"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="@color/gray" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quick Log"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/btn100ml"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="+100ml"
                        android:textSize="12sp"
                        android:background="@color/water_light"
                        android:textColor="@color/black"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/btn200ml"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="+200ml"
                        android:textSize="12sp"
                        android:background="@color/water_medium"
                        android:textColor="@color/black"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/btn300ml"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="+300ml"
                        android:textSize="12sp"
                        android:background="@color/water_dark"
                        android:textColor="@color/white"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/btnCustom"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Custom"
                        android:textSize="12sp"
                        android:background="@color/primary_color"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Today's Intake"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/tvNoLogs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No water logged today"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="@color/gray"
                    android:padding="20dp" />

                <LinearLayout
                    android:id="@+id/logsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>